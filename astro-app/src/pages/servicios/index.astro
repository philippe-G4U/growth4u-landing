---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navbar from '../../components/Navbar.astro';
import Footer from '../../components/Footer.astro';
import CookieBanner from '../../react/CookieBanner';
import { getTranslations } from '../../i18n/utils';
import { BOOKING_LINK, SITE_URL } from '../../lib/constants';

const t = getTranslations('es');

const breadcrumbSchema = {
  '@context': 'https://schema.org',
  '@type': 'BreadcrumbList',
  itemListElement: [
    { '@type': 'ListItem', position: 1, name: 'Home', item: SITE_URL },
    { '@type': 'ListItem', position: 2, name: 'Servicios', item: `${SITE_URL}/servicios/` },
  ],
};

const services = [
  {
    title: 'GEO para Fintechs',
    subtitle: 'Generative Engine Optimization',
    desc: 'Posiciona tu fintech en las respuestas de ChatGPT, Perplexity, Gemini y Google AI Overviews. Sé la recomendación, no solo un resultado.',
    href: '/servicios/geo-para-fintechs/',
    icon: 'M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z',
  },
  {
    title: 'Growth Marketing Fintech',
    subtitle: 'Estrategia integral de crecimiento',
    desc: 'Motor de crecimiento para cada etapa de tu fintech: PMF, escalado y expansión internacional. Sin depender de paid media.',
    href: '/servicios/growth-marketing-fintech/',
    icon: 'M13 7h8m0 0v8m0-8l-8 8-4-4-6 6',
  },
  {
    title: 'Trust Engine',
    subtitle: 'Metodología propietaria Growth4U',
    desc: 'El sistema que reduce tu CAC un 70% construyendo confianza orgánica, referral estructurado y viralidad diseñada.',
    href: '/servicios/trust-engine/',
    icon: 'M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z',
  },
];
---

<BaseLayout
  title="Servicios de Growth Marketing para Fintechs | Growth4U"
  description="Servicios especializados en growth marketing para fintechs en España: GEO (Generative Engine Optimization), Growth Marketing y Trust Engine. Reducimos tu CAC hasta un 70%."
  jsonLd={[breadcrumbSchema]}
>
  <Navbar t={t} lang="es" bookingLink={BOOKING_LINK} />
  <CookieBanner client:idle />

  <section class="pt-44 pb-20 bg-white">
    <div class="max-w-5xl mx-auto px-4 text-center">
      <span class="inline-block px-4 py-2 rounded-full bg-[#6351d5]/10 text-[#6351d5] font-bold text-sm mb-6">
        SERVICIOS
      </span>
      <h1 class="text-4xl md:text-6xl font-extrabold text-[#032149] mb-6">
        Growth Marketing <span class="bg-gradient-to-r from-[#6351d5] to-[#3f45fe] bg-clip-text text-transparent">especializado en Fintech</span>
      </h1>
      <p class="text-xl text-slate-600 max-w-2xl mx-auto leading-relaxed">
        No hacemos marketing genérico. Entendemos la regulación fintech, la fricción de confianza del usuario financiero y las métricas que importan.
      </p>
    </div>
  </section>

  <section class="pb-24 px-4">
    <div class="max-w-5xl mx-auto grid grid-cols-1 md:grid-cols-3 gap-8">
      {services.map((service) => (
        <a href={service.href} class="group bg-white rounded-3xl border border-slate-100 p-8 hover:border-[#6351d5]/20 hover:shadow-xl transition-all duration-300">
          <div class="w-14 h-14 bg-[#6351d5]/10 rounded-2xl flex items-center justify-center mb-6 group-hover:bg-[#6351d5]/20 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="#6351d5" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d={service.icon} /></svg>
          </div>
          <h2 class="text-xl font-extrabold text-[#032149] mb-1 group-hover:text-[#6351d5] transition-colors">{service.title}</h2>
          <p class="text-sm font-bold text-[#6351d5] mb-4">{service.subtitle}</p>
          <p class="text-slate-600 leading-relaxed mb-6">{service.desc}</p>
          <span class="inline-flex items-center gap-2 text-[#6351d5] font-bold text-sm group-hover:gap-3 transition-all">
            Ver servicio
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
          </span>
        </a>
      ))}
    </div>
  </section>

  <section class="py-24 px-4">
    <div class="max-w-4xl mx-auto">
      <div class="bg-gradient-to-br from-[#6351d5] to-[#3f45fe] rounded-3xl p-12 md:p-16 text-center text-white relative overflow-hidden">
        <h2 class="text-3xl md:text-4xl font-extrabold mb-4">¿No sabes por dónde empezar?</h2>
        <p class="text-white/80 text-lg mb-8 max-w-xl mx-auto">Agenda una llamada gratuita y te ayudamos a identificar la estrategia ideal para tu fintech.</p>
        <a href={BOOKING_LINK} target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 bg-white text-[#6351d5] font-bold py-4 px-8 rounded-full text-lg shadow-lg hover:shadow-xl transition-all">
          Agendar Llamada Gratis
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
        </a>
      </div>
    </div>
  </section>

  <Footer t={t} bookingLink={BOOKING_LINK} />
</BaseLayout>
