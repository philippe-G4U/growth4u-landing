    { '@type': 'ListItem', position: 2, name: 'Servicios', item: `${SITE_URL}/servicios/` },
    { '@type': 'ListItem', position: 3, name: 'GEO para Fintechs', item: `${SITE_URL}/servicios/geo-para-fintechs/` },
  ],
};

