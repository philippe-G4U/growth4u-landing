---
import BaseLayout from '../../layouts/BaseLayout.astro';
import CacGuideGate from '../../react/CacGuideGate';
import { SITE_URL, BOOKING_LINK } from '../../lib/constants';

const SLUG = 'cac-sostenible';
const TITLE = 'Reduce tu CAC un 70%: El Framework de 5 Bloques';
const DESCRIPTION = 'El sistema que usaron Bit2Me y Bnext para construir adquisición sostenible sin depender de paid. Framework completo, checklist de 15 puntos y plan de acción de 30 días.';

const breadcrumbSchema = {
  '@context': 'https://schema.org',
  '@type': 'BreadcrumbList',
  itemListElement: [
    { '@type': 'ListItem', position: 1, name: 'Home', item: SITE_URL },
    { '@type': 'ListItem', position: 2, name: 'Recursos', item: `${SITE_URL}/recursos/` },
    { '@type': 'ListItem', position: 3, name: TITLE, item: `${SITE_URL}/recursos/${SLUG}/` },
  ],
};
---

<BaseLayout
  title={`${TITLE} | Growth4U`}
  description={DESCRIPTION}
  canonical={`${SITE_URL}/recursos/${SLUG}/`}
  jsonLd={[breadcrumbSchema]}
>
  <main class="min-h-screen bg-white">
    <!-- Hero -->
    <section class="bg-[#032149] pt-20 pb-14">
      <div class="max-w-3xl mx-auto px-4">
        <!-- Breadcrumb -->
        <div class="flex items-center gap-2 mb-6">
          <a href="/" class="text-white/50 hover:text-white text-sm transition-colors">Growth4U</a>
          <span class="text-white/30">/</span>
          <a href="/recursos/" class="text-white/50 hover:text-white text-sm transition-colors">Recursos</a>
        </div>

        <span class="inline-block px-3 py-1 bg-[#6351d5]/30 text-[#a89cf7] rounded-full text-xs font-bold uppercase tracking-wider mb-6">
          Guía Gratuita
        </span>

        <h1 class="text-4xl md:text-5xl font-extrabold text-white mb-6 leading-tight">
          Reduce tu CAC un 70%:<br class="hidden md:block" /> El Framework de 5 Bloques
        </h1>

        <p class="text-xl text-slate-300 leading-relaxed mb-8">
          El sistema que usaron Bit2Me y Bnext. Framework completo + checklist de 15 puntos + plan de 30 días.
        </p>

        <div class="flex flex-wrap items-center gap-6 text-slate-400 text-sm">
          <div class="flex items-center gap-2">
            <svg class="w-4 h-4 text-green-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/>
            </svg>
            <span>100% gratuito</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-4 h-4 text-green-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/>
            </svg>
            <span>Acceso inmediato</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-4 h-4 text-green-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/>
            </svg>
            <span>Sin spam</span>
          </div>
        </div>
      </div>
    </section>

    <!-- Content with gate -->
    <section class="max-w-3xl mx-auto px-4 py-12 pb-20">
      <CacGuideGate client:only="react" />
    </section>
  </main>
</BaseLayout>
