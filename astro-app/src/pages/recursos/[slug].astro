---
import BaseLayout from '../../layouts/BaseLayout.astro';
import LeadMagnetGate from '../../react/LeadMagnetGate';
import { getAllLeadMagnets, getLeadMagnetBySlug } from '../../lib/firebase-fetch';
import { SITE_URL } from '../../lib/constants';

export async function getStaticPaths() {
  const magnets = await getAllLeadMagnets();
  return magnets.map((m) => ({ params: { slug: m.slug } }));
}

const { slug } = Astro.params;
const magnet = await getLeadMagnetBySlug(slug as string);

if (!magnet) {
  return Astro.redirect('/404/');
}

const breadcrumbSchema = {
  '@context': 'https://schema.org',
  '@type': 'BreadcrumbList',
  itemListElement: [
    { '@type': 'ListItem', position: 1, name: 'Home', item: SITE_URL },
    { '@type': 'ListItem', position: 2, name: 'Recursos', item: `${SITE_URL}/recursos/` },
    { '@type': 'ListItem', position: 3, name: magnet.title, item: `${SITE_URL}/recursos/${magnet.slug}/` },
  ],
};
---

<BaseLayout
  title={`${magnet.title} | Growth4U`}
  description={magnet.description || `Recurso gratuito: ${magnet.title}. Accede al contenido completo de Growth4U.`}
  ogImage={magnet.image}
  canonical={`${SITE_URL}/recursos/${magnet.slug}/`}
  jsonLd={[breadcrumbSchema]}
>
  <main class="min-h-screen bg-white">
    <!-- Hero -->
    <section class="bg-[#032149] pt-20 pb-14">
      <div class="max-w-3xl mx-auto px-4">
        <div class="flex items-center gap-2 mb-6">
          <a href="/" class="text-white/50 hover:text-white text-sm transition-colors">Growth4U</a>
          <span class="text-white/30">/</span>
          <span class="text-white/50 text-sm">Recursos</span>
        </div>

        <span class="inline-block px-3 py-1 bg-[#6351d5]/30 text-[#a89cf7] rounded-full text-xs font-bold uppercase tracking-wider mb-6">
          Recurso Gratuito
        </span>

        <h1 class="text-4xl md:text-5xl font-extrabold text-white mb-6 leading-tight">
          {magnet.title}
        </h1>

        {magnet.description && (
          <p class="text-xl text-slate-300 leading-relaxed mb-8">{magnet.description}</p>
        )}

        <div class="flex flex-wrap items-center gap-6 text-slate-400 text-sm">
          <div class="flex items-center gap-2">
            <svg class="w-4 h-4 text-green-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/>
            </svg>
            <span>100% gratuito</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-4 h-4 text-green-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/>
            </svg>
            <span>Acceso inmediato</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-4 h-4 text-green-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/>
            </svg>
            <span>Sin spam</span>
          </div>
        </div>
      </div>
    </section>

    <!-- Gated content -->
    <section class="max-w-3xl mx-auto px-4 py-12 pb-20">
      <LeadMagnetGate
        client:only="react"
        magnetId={magnet.id}
        magnetSlug={magnet.slug}
        magnetTitle={magnet.title}
        excerpt={magnet.excerpt}
        contentUrl={magnet.contentUrl}
      />
    </section>
  </main>
</BaseLayout>
