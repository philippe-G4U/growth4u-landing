---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getAllArticles } from '../../lib/firebase-fetch';
import { SITE_URL, BOOKING_LINK } from '../../lib/constants';

const articles = await getAllArticles();

const breadcrumbSchema = {
  '@context': 'https://schema.org',
  '@type': 'BreadcrumbList',
  itemListElement: [
    { '@type': 'ListItem', position: 1, name: 'Home', item: SITE_URL },
    { '@type': 'ListItem', position: 2, name: 'Artículos', item: `${SITE_URL}/articulos/` },
  ],
};
---

<BaseLayout
  title="Artículos Premium | Growth4U"
  description="Contenido exclusivo sobre Growth Marketing, GEO y Trust Engine para empresas tech. Accede a artículos en profundidad del equipo Growth4U."
  canonical={`${SITE_URL}/articulos/`}
  jsonLd={[breadcrumbSchema]}
>
  <main class="min-h-screen bg-[#f1f5f9] py-20">
    <div class="max-w-5xl mx-auto px-4">
      <!-- Header -->
      <div class="mb-12 text-center">
        <span class="inline-block px-3 py-1 bg-[#6351d5]/10 text-[#6351d5] rounded-full text-xs font-bold uppercase tracking-wider mb-4">Contenido Premium</span>
        <h1 class="text-4xl md:text-5xl font-extrabold text-[#032149] mb-4">Artículos</h1>
        <p class="text-xl text-slate-600 max-w-2xl mx-auto">Contenido en profundidad sobre Growth Marketing, GEO y cómo escalar tu empresa tech en España.</p>
      </div>

      <!-- Articles Grid -->
      {articles.length === 0 ? (
        <div class="text-center py-20">
          <p class="text-slate-500 text-lg">Próximamente publicaremos nuestros primeros artículos.</p>
          <a
            href={BOOKING_LINK}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 mt-6 bg-[#6351d5] hover:bg-[#5242b8] text-white font-bold py-3 px-6 rounded-full transition-all"
          >
            Hablar con el equipo
          </a>
        </div>
      ) : (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {articles.map((article) => (
            <a href={`/articulos/${article.slug}/`} class="group bg-white rounded-2xl overflow-hidden shadow-sm hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
              <div class="relative aspect-video overflow-hidden bg-slate-100">
                {article.image ? (
                  <img
                    src={article.image}
                    alt={article.title}
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                    loading="lazy"
                  />
                ) : (
                  <div class="w-full h-full bg-gradient-to-br from-[#6351d5] to-[#3f45fe] flex items-center justify-center">
                    <svg class="w-12 h-12 text-white/50" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                      <path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"/><polyline points="14 2 14 8 20 8"/>
                    </svg>
                  </div>
                )}
                <div class="absolute top-3 left-3 bg-white/90 backdrop-blur px-2 py-1 rounded-full text-xs font-bold text-[#6351d5] uppercase tracking-wide">
                  {article.category}
                </div>
                <div class="absolute top-3 right-3 bg-[#6351d5] text-white text-xs font-bold px-2 py-1 rounded-full flex items-center gap-1">
                  <svg class="w-3 h-3" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <rect width="18" height="11" x="3" y="11" rx="2" ry="2"/><path d="M7 11V7a5 5 0 0 1 10 0v4"/>
                  </svg>
                  Premium
                </div>
              </div>
              <div class="p-6">
                <h2 class="font-bold text-[#032149] text-lg mb-2 group-hover:text-[#6351d5] transition-colors line-clamp-2">{article.title}</h2>
                <p class="text-slate-500 text-sm line-clamp-2 mb-4">{article.excerpt}</p>
                <div class="flex items-center justify-between text-slate-400 text-xs">
                  <span>{article.readTime}</span>
                  <span class="text-[#6351d5] font-bold group-hover:gap-2 transition-all">Leer más →</span>
                </div>
              </div>
            </a>
          ))}
        </div>
      )}
    </div>
  </main>
</BaseLayout>
