---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Footer from '../../components/Footer.astro';
import CookieBanner from '../../react/CookieBanner';
import { getTranslations } from '../../i18n/utils';
import { getAllPosts } from '../../lib/firebase-fetch';
import { BOOKING_LINK } from '../../lib/constants';

const t = getTranslations('es');

let posts: Awaited<ReturnType<typeof getAllPosts>> = [];
try {
  posts = await getAllPosts();
} catch (e) {
  console.warn('Could not fetch blog posts at build time:', e);
}

// ‚îÄ‚îÄ‚îÄ Temas / Pillar pages (navegaci√≥n por clusters) ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
const TOPICS = [
  // Cluster Agencia
  { slug: 'agencia-growth-hacking-fintech-espana',                       label: 'Growth Hacking Fintech',   emoji: 'üöÄ', group: 'Agencia' },
  { slug: 'agencia-influencer-marketing-financiero-fintech-espana',       label: 'Influencer Marketing',     emoji: 'üì±', group: 'Agencia' },
  { slug: 'agencia-outreach-b2b-fintech-espana',                         label: 'Outreach B2B',             emoji: '‚úâÔ∏è', group: 'Agencia' },
  { slug: 'agencia-afiliados-referidos-fintech-espana',                  label: 'Afiliados & Referidos',    emoji: 'ü§ù', group: 'Agencia' },
  { slug: 'agencia-estrategia-gtm-fintech-espana',                       label: 'Estrategia GTM',           emoji: 'üó∫Ô∏è', group: 'Agencia' },
  { slug: 'agencia-founder-led-growth-fintech',                          label: 'Founder-Led Growth',       emoji: 'üë§', group: 'Agencia' },
  // Cluster Herramientas
  { slug: 'herramientas-para-crear-contenido-digital',                   label: 'Crear Contenido',          emoji: '‚úçÔ∏è', group: 'Herramientas' },
  { slug: 'herramientas-outreach-y-prospeccion-b2b',                     label: 'Prospecci√≥n B2B',          emoji: 'üéØ', group: 'Herramientas' },
  { slug: 'plataformas-afiliados-e-influencers',                         label: 'Plataformas Afiliados',    emoji: 'üîó', group: 'Herramientas' },
  { slug: 'automatizacion-marketing-growth-fintech',                     label: 'Automatizaci√≥n',           emoji: '‚ö°', group: 'Herramientas' },
  { slug: 'herramientas-gtm-lanzamiento-producto-b2b',                   label: 'GTM & Lanzamiento',        emoji: 'üì¶', group: 'Herramientas' },
  { slug: 'herramientas-atribucion-marketing-fintech',                   label: 'Atribuci√≥n',               emoji: 'üìä', group: 'Herramientas' },
  // Fundamentos
  { slug: 'unit-economics-fintech-cac-ltv-payback',                      label: 'Unit Economics',           emoji: 'üí∞', group: 'Fundamentos' },
  { slug: 'geo-para-fintechs-guia-completa-ia-chatgpt-perplexity',       label: 'GEO & B√∫squeda IA',        emoji: 'ü§ñ', group: 'Fundamentos' },
  { slug: 'stack-martech-fintech-espana-guia-completa',                  label: 'Stack Martech',            emoji: 'üõ†Ô∏è', group: 'Fundamentos' },
];

const pillarSlugs = new Set(TOPICS.map(t => t.slug));
const postMap = new Map(posts.map(p => [p.slug, p]));
// Solo mostrar topics que tienen post generado
const availableTopics = TOPICS.filter(t => postMap.has(t.slug));
const groups = ['Agencia', 'Herramientas', 'Fundamentos'];
---

<BaseLayout
  title="Blog | Growth4U"
  description="Gu√≠as y estrategias de Growth para Fintech en Espa√±a: growth hacking, outreach B2B, influencer marketing, unit economics, GEO y m√°s."
>
  <CookieBanner client:idle />

  <!-- Floating Nav -->
  <div class="fixed top-6 inset-x-0 z-50 flex justify-center px-4">
    <nav class="nav-island w-full max-w-6xl">
      <div class="px-6 sm:px-8">
        <div class="flex items-center justify-between h-16">
          <a href="/" class="flex items-center gap-0 cursor-pointer group flex-shrink-0">
            <img src="https://i.imgur.com/imHxGWI.png" alt="Growth4U Logo" width="133" height="20" class="h-5 md:h-6 w-auto object-contain transition-transform group-hover:scale-105" />
          </a>
          <div class="hidden md:flex items-center gap-6">
            <a href="/" class="hover:text-[#6351d5] transition-colors px-2 py-2 rounded-md text-sm font-medium text-[#032149]">Home</a>
            <span class="text-[#6351d5] px-2 py-2 rounded-md text-sm font-bold">Blog</span>
          </div>
          <div class="flex items-center gap-4">
            <a href={BOOKING_LINK} target="_blank" rel="noopener noreferrer" class="bg-[#6351d5] hover:bg-[#3f45fe] text-white font-bold py-2 px-5 rounded-full text-sm transition-all duration-300 shadow-lg">
              {t.nav.cta}
            </a>
          </div>
        </div>
      </div>
    </nav>
  </div>

  <section class="pt-40 pb-20 px-4">
    <div class="max-w-7xl mx-auto">

      <!-- Header -->
      <div class="text-center mb-14">
        <span class="inline-block px-4 py-2 rounded-full bg-blue-50 text-[#6351d5] font-bold text-sm mb-4">
          INSIGHTS & ESTRATEGIA
        </span>
        <h1 class="text-4xl md:text-6xl font-extrabold text-[#032149] mb-6">Blog Growth4U</h1>
        <p class="text-xl text-slate-600 max-w-2xl mx-auto">
          Recursos estrat√©gicos para escalar tu empresa fintech sin depender de paid media.
        </p>
      </div>

      <!-- ‚îÄ‚îÄ‚îÄ Temas principales (Pillar Pages) ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ -->
      {availableTopics.length > 0 && (
        <div class="mb-16">
          <div class="flex items-center gap-4 mb-8">
            <h2 class="text-lg font-bold text-[#032149] whitespace-nowrap">Gu√≠as completas</h2>
            <div class="h-px flex-1 bg-slate-200"></div>
          </div>

          {groups.map(group => {
            const groupTopics = availableTopics.filter(t => t.group === group);
            if (groupTopics.length === 0) return null;
            const groupLabels: Record<string, string> = {
              'Agencia': 'Servicios de Agencia',
              'Herramientas': 'Herramientas & Stack',
              'Fundamentos': 'Fundamentos Growth',
            };
            return (
              <div class="mb-6">
                <p class="text-xs font-bold text-slate-400 uppercase tracking-widest mb-3">{groupLabels[group]}</p>
                <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-6 gap-2">
                  {groupTopics.map(topic => (
                    <a
                      href={`/blog/${topic.slug}/`}
                      class="group flex flex-col items-center gap-2 p-3 rounded-xl border border-slate-200 bg-white hover:border-[#6351d5] hover:bg-[#6351d5]/5 transition-all duration-200 text-center"
                    >
                      <span class="text-2xl">{topic.emoji}</span>
                      <span class="text-xs font-semibold text-slate-700 group-hover:text-[#6351d5] transition-colors leading-tight">{topic.label}</span>
                    </a>
                  ))}
                </div>
              </div>
            );
          })}
        </div>
      )}

      <!-- ‚îÄ‚îÄ‚îÄ Filtro + Posts ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ -->
      <div class="flex items-center gap-4 mb-8">
        <h2 class="text-lg font-bold text-[#032149] whitespace-nowrap">Todos los art√≠culos</h2>
        <div class="h-px flex-1 bg-slate-200"></div>
      </div>

      <!-- Filtro -->
      <div class="flex flex-wrap gap-2 mb-8" id="category-filters">
        {(['Todos', 'Gu√≠as', 'Growth', 'Marketing', 'GEO', 'Estrategia'] as const).map((cat) => (
          <button
            data-filter={cat}
            class={`filter-btn px-4 py-2 rounded-full text-sm font-semibold border transition-all duration-200 ${cat === 'Todos' ? 'bg-[#6351d5] text-white border-[#6351d5]' : 'bg-white text-slate-600 border-slate-200 hover:border-[#6351d5] hover:text-[#6351d5]'}`}
          >
            {cat}
          </button>
        ))}
      </div>

      <!-- Grid de posts -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8" id="posts-grid">
        {posts.map((post) => {
          const isPillar = pillarSlugs.has(post.slug);
          return (
            <a
              href={`/blog/${post.slug}/`}
              data-category={post.category}
              data-is-pillar={isPillar ? 'true' : 'false'}
              class={`post-card bg-white rounded-2xl overflow-hidden border shadow-sm hover:shadow-xl transition-all duration-300 group cursor-pointer hover:-translate-y-1 ${isPillar ? 'border-[#6351d5]/30 ring-1 ring-[#6351d5]/10' : 'border-slate-100'}`}
            >
              <div class="relative aspect-video bg-slate-100 overflow-hidden">
                {post.image ? (
                  <img src={post.image} alt={post.title} class="object-cover w-full h-full transform group-hover:scale-105 transition-transform duration-500" loading="lazy" />
                ) : (
                  <div class="w-full h-full bg-gradient-to-br from-[#6351d5]/10 to-[#45b6f7]/10 flex items-center justify-center">
                    <span class="text-4xl opacity-40">
                      {isPillar ? 'üìñ' : 'üí°'}
                    </span>
                  </div>
                )}
                <div class="absolute top-4 left-4 flex gap-2">
                  {isPillar && (
                    <span class="bg-[#6351d5] text-white px-3 py-1 rounded-full text-xs font-bold uppercase tracking-wide shadow-sm">
                      Gu√≠a completa
                    </span>
                  )}
                  {!isPillar && (
                    <span class="bg-white/90 backdrop-blur px-3 py-1 rounded-full text-xs font-bold text-[#6351d5] uppercase tracking-wide border border-slate-200 shadow-sm">
                      {post.category}
                    </span>
                  )}
                </div>
              </div>
              <div class="p-6">
                <h3 class="text-xl font-bold mb-3 text-[#032149] group-hover:text-[#6351d5] transition-colors line-clamp-2">
                  {post.title}
                </h3>
                <p class="text-slate-600 text-sm mb-4 line-clamp-3 leading-relaxed">{post.excerpt}</p>
                <div class="flex items-center justify-between text-sm text-slate-500 pt-4 border-t border-slate-50">
                  <div class="flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-4 h-4 mr-2"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
                    {post.readTime}
                  </div>
                  <span class="text-[#6351d5] font-bold flex items-center gap-1 group-hover:gap-2 transition-all">
                    Leer m√°s
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-4 h-4"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
                  </span>
                </div>
              </div>
            </a>
          );
        })}
      </div>

      <script>
        const buttons = document.querySelectorAll<HTMLButtonElement>('.filter-btn');
        const cards = document.querySelectorAll<HTMLElement>('.post-card');

        buttons.forEach(btn => {
          btn.addEventListener('click', () => {
            const filter = btn.dataset.filter;

            buttons.forEach(b => {
              b.classList.remove('bg-[#6351d5]', 'text-white', 'border-[#6351d5]');
              b.classList.add('bg-white', 'text-slate-600', 'border-slate-200');
            });
            btn.classList.remove('bg-white', 'text-slate-600', 'border-slate-200');
            btn.classList.add('bg-[#6351d5]', 'text-white', 'border-[#6351d5]');

            cards.forEach(card => {
              let show = false;
              if (filter === 'Todos') {
                show = true;
              } else if (filter === 'Gu√≠as') {
                show = card.dataset.isPillar === 'true';
              } else {
                show = card.dataset.category === filter;
              }
              card.style.display = show ? '' : 'none';
            });
          });
        });
      </script>

    </div>
  </section>

  <Footer t={t} bookingLink={BOOKING_LINK} />
</BaseLayout>
