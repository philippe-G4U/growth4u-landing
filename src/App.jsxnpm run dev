                {/* CALL TO ACTION SCALE PHASE */}
                <div className="mt-auto pt-6 border-t border-slate-100 flex justify-center">
                   <button className={`flex items-center gap-2 text-sm font-bold transition-all ${showFlywheel ? 'text-[#6351d5]' : 'text-slate-400 hover:text-[#6351d5]'}`}>
